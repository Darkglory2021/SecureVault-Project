{
  "manifest_version": 3,
  "name": "SecureVault Password Manager",
  "version": "1.0.0",
  "description": "Automatically fill passwords from your SecureVault password manager",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecureVault Password Manager",
    "default_icon": {
      "16": "icons/lock-16.png",
      "32": "icons/lock-32.png",
      "128": "icons/lock-128.png"
    }
  },
  
  "icons": {
    "16": "icons/lock-16.png",
    "32": "icons/lock-32.png",
    "128": "icons/lock-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}